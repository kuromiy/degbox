{
	"name": "degbox",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/main/index.mjs",
	"scripts": {
		"dev": "tsx --env-file=.env ./cmd/dev.ts",
		"build": "tsx --env-file=.env ./cmd/build.ts",
		"db:gen": "npm run db:gen:user && npm run db:gen:application",
		"db:gen:user": "npx drizzle-kit generate --config=./features/shared/database/user/drizzle.config.ts",
		"db:gen:application": "npx drizzle-kit generate --config=./features/shared/database/application/drizzle.config.ts",
		"db:mig": "npx drizzle-kit migrate",
		"test": "npm run test:api && npm run test:server",
		"test:e2e": "npx playwright test",
		"test:api": "npx tsx --env-file=.env.test ./tests/api/index.ts",
		"test:server": "npx tsx --env-file=.env.test ./tests/server/index.ts",
		"prepare": "husky",
		"lint": "npx @biomejs/biome check",
		"check": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kuromiy/degbox.git"
	},
	"keywords": [],
	"author": "",
	"license": "UNLICENSED",
	"type": "module",
	"bugs": {
		"url": "https://github.com/kuromiy/degbox/issues"
	},
	"homepage": "https://github.com/kuromiy/degbox#readme",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@playwright/test": "^1.55.0",
		"@tailwindcss/cli": "^4.1.14",
		"@types/node": "^24.3.1",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.2",
		"cheerio": "^1.1.2",
		"drizzle-kit": "^0.31.4",
		"electron": "^38.1.0",
		"esbuild": "^0.25.9",
		"husky": "^9.1.7",
		"react-hydra-builder": "github:kuromiy/react-hydra-builder#v1.0.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.5"
	},
	"dependencies": {
