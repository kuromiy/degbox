		"hls.js": "^1.6.14",
		"hono": "^4.9.10",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router-dom": "^7.9.1",
		"uuid": "^13.0.0",
		"winston": "^3.17.0",
		"zod": "^4.2.1"
	}
